<div class="container">
  <div class="well product">
    <h1> <%= @product.name %> </h1>
    <h4><%=@product.description %></h4>
    <h4><strong>Country of
      Origin: </strong><%=@product.country_of_origin %></h4>
    <h4><strong>Price: $</strong><%=@product.price %></h4>
    <div>
      <p><%= link_to "Delete", product_path(@product),
                       :data => {:confirm => "You sure?",
                                 :method => "delete"} %> |
       <%= link_to "Edit Product", edit_product_path(@product)%></p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <h2>reviews:</h2>
        <br>
        <div>
          <%= link_to "Add A Review", new_product_review_path(@product, @review) %>
        </div>
        <% @reviews.each do |review| %>
          <div class="well">
            <h4 class="product">By: <%= review.username%></h4>
            <p><%= review.rating %></p>
            <p><%= review.written_review %></p>
            <p><%= review.created_at %></p>
          </div>
          <div class="col-sm-4">
            <img class="thumbnail" src="" alt="">
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <p> <%= link_to "Return to products", products_path %> </p>

</div>
