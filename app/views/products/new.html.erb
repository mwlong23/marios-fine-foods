<h1>New Product</h1>

<% if @product.errors.any? %>
  <h3>Opps, there were some errors: </h3>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <%end %>
<%= form_for @product do |f|  %>

<%= f.label :name %>
<%=  f.text_field :name %>
<br>
<br>
<%= f.label :description %>
<%=  f.text_field :description %>
<br>
<br>
<%= f.label :country_of_origin %>
<%=  f.text_field :country_of_origin %>
<br>
<br>
<%= f.label :price %>
<%=  f.text_field :price %>
<br>
<br>
<%= f.submit %>
<% end %>
